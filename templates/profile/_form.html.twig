{{ form_start(form) }}
<div class="lign">
	<p class="label">Nom</p>
	{{ form_row(form.lastname, {
		'label': false,
		'attr': {
			'id': 'lastname',
			'placeholder': 'Nom',
		}}) }}
</div>
<div class="lign">
	<p class="label">Prénom</p>
	{{ form_row(form.firstname, {
		'label': false,
		'attr': {
			'id': 'firstname',
			'placeholder': 'Prénom',
		}})	}}
</div>
<div class="lign">
	<p class="label">Courriel</p>
	{{ form_row(form.email, {
		'label': false,
		'attr': {
			'id': 'email',
			'placeholder': 'Courriel',
		}})	}}
</div>
<div class="lign">
	<p class="label">Mot de passe</p>
	{{ form_row(form.password, {
		'label': false,
		'attr': {
			'id': 'password',
			'placeholder': 'Mot de passe',
		}})	}}
</div>
<div class="row d-flex justify-content-end align-items-center mt-4">
	<div class="col-auto">
		<button class="userBtn btn btn-outline-primary">{{ button_label|default('Save') }}</button>
	</div>
	{% if user.roles[0] != 'ROLE_ADMIN' and is_granted('ROLE_USER') %}
		<div class="col-auto">
			{{ include('user/_delete_form.html.twig') }}
		</div>
	{% endif %}
</div>

{# <button class="btn">{{ button_label|default('Save') }}</button> #}
{{ form_end(form) }}
